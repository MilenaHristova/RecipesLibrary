@model List<RecipeViewModel>

@{
    ViewData["Title"] = "Home Page";
}
<main>
    <div>
        <div class="row">
            <div class="col-md-10">
                <h1 class="my-4">
                    Recently Added
                </h1>
        
                @Html.DisplayForModel()

                <div class="text-center">
                    <a href="/Recipes/All" class="btn btn-warning btn-lg">View More</a>
                </div>

            </div>
            <div class="col-md-2">
                <div>
                    <h3>Categories</h3>
                    <div>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    @foreach (var cat in (List<string>)this.ViewData["categories"])
                                    {
                                        <li class="catLinks">
                                            <a href="/Recipes/SearchByCategory?category=@cat">@cat</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div>
                    <a href="/Recipes/Search" class="btn btn-lg btn-warning">Browse Recipes</a>
                </div>
            </div>
        </div>
    </div>
</main>



