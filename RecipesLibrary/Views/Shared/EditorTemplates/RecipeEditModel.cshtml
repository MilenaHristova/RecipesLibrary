@model RecipeEditModel

<h1>Edit Recipe</h1>
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Name">Title</label>
            <input asp-for="Name" class="form-control" placeholder="Title">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="ImageUrl">Image Url</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="ImageUrl">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Course">Course</label>
            <select asp-for="Course" asp-items="Model.Courses" class="form-control"></select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Servings">Servings</label>
            <input asp-for="Servings" class="form-control" placeholder="Servings">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Category">Category</label>
            <select asp-for="Category" asp-items="Model.Categories" class="form-control"></select>
        </div>
    </div>
    <br />
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Preparation">Preparation</label>
            <textarea asp-for="Preparation" class="form-control" placeholder="Preparation Instructions"></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PrepTime">Preparation Time(in minutes)</label>
            <input asp-for="PrepTime" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CookingTime">Cooking Time(in minutes)</label>
            <input asp-for="CookingTime" class="form-control" />
        </div>
    </div>
    <div>
        <div class="ingrContainer">
            <h1>Ingredients</h1>
            @{ 
                var index = 0;
            }
            @foreach (var ingr in Model.Ingredients)
            {
                <div class="form-row row">
                    <div class="col-md-4">
                        <input name="Ingredients[@index].Name" class="form-control" placeholder="Name" value="@ingr.Name" />
                    </div>
                    <div class="col-md-2">
                        <input name="Ingredients[@index].Measurement" class="form-control" placeholder="Measurement" value="@ingr.Measurement" />
                    </div>
                    <div class="col-md-2">
                        <input name="Ingredients[@index].Quantity" class="form-control" placeholder="Quantity" value="@ingr.Quantity" />
                    </div>
                    <div>
                        <input type="hidden" name="Ingredients[@index].IsDeleted" class="form-control deleted" placeholder="Quantity" value="@ingr.IsDeleted" />
                    </div>
                    <div class="col-md-2">
                        <a href="#" class="btn btn-warning delete">X</a>
                    </div>
                </div>

                index++;
            }
        </div>
        <br />
        <button id="addIngredient" class="addIngredient btn btn-warning">Add Ingredient</button>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">Save</button>
    </div>
</form>






